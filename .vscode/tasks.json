{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 生成活动文件",
            "command": "D:/MSYS/ucrt64/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-Wall"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "编译器: D:/MSYS/ucrt64/bin/g++",
            // 新增配置：编译成功后自动运行程序
            "postBuildCommand": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,  // 自动聚焦到终端窗口
                "panel": "new", // 每次运行使用新的终端面板
                "showReuseMessage": false,
                "clear": false
            }
        }
    ]
}
